{
  "name": "tuber",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "ts-node-dev --respawn --transpile-only server/index.ts",
    "server:prod": "ts-node server/index.ts",
    "test": "mocha -r ts-node/register \"server/test/**/*.js\" --exit",
    "test:visual": "playwright test",
    "test:visual:update": "playwright test --update-snapshots",
    "test:e2e": "playwright test tests/e2e --project=chromium" ,
    "deploy:worker": "npx wrangler publish --env production",
    "lint": "eslint . --ext .ts,.tsx,.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "cheerio": "^1.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fast-xml-parser": "^4.1.6",
    "framer-motion": "^10.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.1"
  },
  "devDependencies": {
    "@types/axe-core": "^2.0.2",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^16.2.14",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.17.0",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "axe-core": "^4.11.1",
    "chai": "^4.3.8",
    "eslint": "^8.50.0",
    "jest": "^29.6.4",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "postcss": "^8.4.27",
    "playwright": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "sinon": "^15.0.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.6",
    "vite": "^5.4.21"
  }
}
