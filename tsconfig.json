{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["src", "server"],
  "exclude": ["node_modules"]
}
