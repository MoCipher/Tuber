{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "public"
  },
  "include": ["src/main.ts", "src/lib/**/*"],
  "exclude": ["node_modules", "dist", "server"]
}
